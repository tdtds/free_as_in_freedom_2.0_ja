\def\@makechapterhead#1{%
  %\vspace*{0.5\Cvs}% 欧文は50pt
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \hfill{\LARGE\headfont \@chapapp\thechapter\@chappos}
        \par\nobreak
        \vskip 0.5\Cvs % 欧文は20pt
      \fi
    \fi
    \interlinepenalty\@M
    \hfill{\LARGE \headfont #1\par\nobreak}
    \vspace*{-2mm}%
    \rule{\textwidth}{0.1mm}
    \vskip 1.0\Cvs}} % 欧文は40pt

\def\@makeschapterhead#1{%
  %\vspace*{0.5\Cvs}% 欧文は50pt
